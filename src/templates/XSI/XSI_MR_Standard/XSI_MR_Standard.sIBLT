	if (connectToReflection)
	{
		AddExpr(cPass + ".sIBL_Reflection_Environment.transform.StaticKineState.oriy", "-" + cFeedback + ".kine.global.roty" + " + 225", true);
		sIBL_XSI_MR_BridgeControlsAndShaders( cPass, "Reflection" );
